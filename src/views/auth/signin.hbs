<div class="container mt-5">
    <div class="row p-4">
        <div class="col-md-4 p-3 mb-5 shadow border rounded mx-auto">
            <div class="card-body">
                <h4 class="card-title">Inicio de sesión</h4>
                <form action="/signin" method="POST" class="mt-3" autocomplete="off">
                    <div class="mb-3">
                        <label class="form-label">Correo Electrónico</label>
                        <input name="email" type="email" class="form-control">
                        <div class="form-text">Recuerda colocar un correo valido.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contraseña</label>
                        <input name="password" type="password" class="form-control mb-2">
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>¿Ya estas registrado?</span>
                        <a href="/signup" class="me-0">Registrate <i class="fas fa-angle-double-right"></i></a>
                    </div>
                    <button type="submit" class="btn btn-primary mt-4">Iniciar Sesión</button>
                </form>
            </div>
        </div>
    </div>
</div>