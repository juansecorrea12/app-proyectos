<div class="container mt-5">
    <div class="row p-4 shadow border rounded">
        <div class="col-md-4">
            <img src="/img/img-logo.jpg" class="img-fluid img-top" alt="img inicial">
        </div>
        <div class="col-md-8 p-3 mb-5">
            <div class="card-body mt-5">
                <h4 class="card-title">Registra tus datos</h4>
                <form action="/signup" method="POST" class="mt-3" autocomplete="off">
                    <div class="mb-3">
                        <label class="form-label">Nombres</label>
                        <input name="nombre" type="text" class="form-control" autofocus>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Apellidos</label>
                        <input name="apellido" type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Correo Electrónico</label>
                        <input name="email" type="email" class="form-control">
                        <div class="form-text">Recuerda colocar un correo valido.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contraseña</label>
                        <input name="password" type="password" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary w-50 mx-auto">Registrarme</button>
                </form>
            </div>
        </div>
    </div>
</div>